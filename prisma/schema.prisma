datasource db {
  url      = env("DATABASE_URL")
  provider = "postgresql"
}

model questions {
  id       Int       @id @default(autoincrement())
  askedBy  String
  question String
  answers  answers[]
}

model answers {
  id         Int       @id @default(autoincrement())
  answeredBy String
  answer     String
  question   questions @relation(fields: [questionId], references: [id])
  questionId Int
}

generator client {
  provider = "prisma-client-js"
}
